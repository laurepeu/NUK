<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
   <h1 class="display-4">Les livres </h1>
   <p class="lead">Tempor id cupidatat officia esse ipsum laboris eiusmod.</p>
</div>



<div class="d-flex align-items-start">
    <div class="container">
        <div class="row">
        <% @articles.each do |article| %>
            <div class="card-deck col-md-4 text-center">
                <div class="card mb-4 box-shadow">
                    <div class="card-header" style="background-color:#F85959; border-color:#F85959">
                        <h4 class="my-0 font-weight-normal"> Inspiration</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">     <%= link_to article.title, article_path(article) %></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>  <%= truncate(article.description, length: 100) %></li>
                        </ul>
                        <%# <button type="button" class="btn btn-lg btn-block btn-outline-primary" style="color:#F85959; border-color:#F85959">Lire l'article</button> %>
                        <div class="btn btn-lg btn-block btn-outline-primary" style="color:#F85959; border-color:#F85959">
                            <%= link_to "Lire l'article", article_path(article),  :class => "btn-main"  %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        </div>
    </div>
</div>
